{
  "name": "frost-api",
  "version": "0.1.0",
  "description": "Frost API Server",
  "private": true,
  "main": "./built/index.js",
  "engines": {
    "node": ">= 7.0.0"
  },
  "scripts": {
    "start": "node --use_strict ./",
    "setup": "node --use_strict ./ --setup",
    "build:copy": "cpx \"./src/**/*.js\" built",
    "build": "npm run build:copy",
    "clean": "rimraf ./built",
    "rebuild": "npm run clean && npm run build",
    "test:lint": "eslint ./built/**/*.js",
    "test:mocha": "mocha",
    "test:mocha-watch": "mocha -w",
    "test": "npm run test:lint && npm run test:mocha"
  },
  "author": "team FrostDevelop",
  "license": "MIT",
  "dependencies": {
    "async-lock": "^1.1.0",
    "body-parser": "^1.17.2",
    "cafy": "^3.1.1",
    "commander": "^2.9.0",
    "compression": "^1.6.2",
    "cpx": "^1.5.0",
    "express": "^4.15.3",
    "file-type": "^7.0.1",
    "methods": "^1.1.2",
    "moment": "^2.18.0",
    "mongo-sanitize": "^1.0.0",
    "mongodb": "^2.2.28",
    "path-to-regexp": "^1.7.0",
    "redis": "^2.7.0",
    "request": "^2.81.0",
    "rimraf": "^2.6.1",
    "validator": "^9.0.0",
    "websocket": "^1.0.24",
    "websocket-events": "0.0.2"
  },
  "devDependencies": {
    "eslint": "^3.18.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-plugin-node": "^4.2.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "mocha": "^3.4.2"
  },
  "files": [
    "*"
  ]
}
